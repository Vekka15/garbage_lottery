<h2 id="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "text_field", placeholder: "Email", autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "text_field", placeholder: "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, :class => "checkbox"%>
      <%= f.label :remember_me, :class => 'login_site_link' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'login_site_link', :style => "margin-left: 9%"%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "login_submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
