<div style="margin-top: 10%">
  <%if @new_user.errors.any? %>
    <% @new_user.errors.each do |attr,msg|  %>
    <center><div class="message-box"><span style="text-transform: capitalize;"><%=attr%></span> <%= msg%></div></center>
    <% end %>
  <%end%>
  <%= form_for @new_user, url: {controller: 'users', action: 'add'} do |f| %>
    <div class="field">
      <%= f.label :email, class: "labels" %><br />
      <%= f.email_field :email, class: "text_field", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label "Password (min 8 characters)", class: "labels", style: "margin-left: 19%;" %><br/>
      <%= f.password_field :password, class: "text_field", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "labels", style: "margin-left: 14%" %><br />
      <%= f.password_field :password_confirmation, class: "text_field", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "login_submit" %>
    </div>

  <% end %>
</div>
