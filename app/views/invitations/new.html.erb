<body >
  <div style="margin-top: 10%">
<%if @new_invitation.errors.any? %>
  <% @new_invitation.errors.each do |attr,msg|  %>
  <center><div class="message-box"><%=msg%></div></center> <!-- displaying error messages -->
  <% end %>
<%end%>
<br>
<%= form_for @new_invitation do |i| %>
 <%= i.label "Email", class: "labels"%><br>
 <div><%= i.text_field :email, class: "text_field" %> </div>
 <div><%= i.submit "Send", class: "login_submit" %></div>

<%end%>
</div>
</body>
