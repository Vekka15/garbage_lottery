<!DOCTYPE html>
<html>
<head>
  <title>Lottery</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<!-- navbars -->
<body style="background-color: white" class="user">
  <% if current_user.admin==true %> <!-- diffrent nav bar for admin -->
    <ul class="pasek">
    <li> <%= link_to("Schedule", assignations_path, :class => "assignation") %> </li> <li class="pasek"> <%= link_to("Invitations", invitations_path, :class => "invitation") %> </li><li> <%= link_to("Users", users_path, :class => "user") %> </li>
    <li style="float: right;"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
    <li class="login"> You have signed in as,<span style="color: #419873;"> admin</span></li>
    </ul>
    <ul class="submenu">
            <li class="submenu"> <%= link_to("List", users_path,:class=>"submenu") %> </li><li class="submenu"> <%= link_to("Add", new_user_path,:class=>"submenu") %> </li>
    </ul>
  <%elsif current_user.admin==nil%> <!-- diffrent nav bar for user -->
    <ul class="pasek" style="margin-bottom: 5%">
    <li> <%= link_to("Schedule", assignations_path, :class => "assignation") %> </li>
    <li style="float: right;"><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
    <li class="login"> You have signed in as, <span style="color: #419873;">  <%= current_user.email %></span> </li>
    </ul>

  <% end %>
<%= yield %>

</body>
</html>
