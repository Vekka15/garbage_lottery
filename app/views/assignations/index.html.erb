<body>
  <table align="center" style="margin-top: 5%">
  <tr>
    <th>Monday</th>
    <th>Tusday </th>
    <th> Wednesday </th>
    <th> Thurday </th>
    <th> Friday </th>
    <th> Saturday </th>
    <th> Sunday </th>
  </tr>
<% if current_user.nil? %>
<%else %>
  <tr>
  <% @assignations.each do |a| %>
    <td style="background-color: #52bf90"><%= a.day.strftime('%d-%m-%Y  ') %> </td>
  <%end%>
  </tr>
  <tr>
  <% @assignations.each do |a| %>
    <% if a.day<Date.today %>
      <td style="background-color:rgba(0,0,0,0.5); color: rgba(0,0,0,0.25); padding-top: 50px;padding-bottom: 50px"><%= a.user_mail[/[^@]+/] %></td>
    <%elsif a.day==Date.today%>
    <td style="background-color: #ff6f69; padding-top: 50px;padding-bottom: 50px"><%= a.user_mail[/[^@]+/] %></td>
    <%else%>
      <td><%= a.user_mail[/[^@]+/] %> </td>
    <% end %>
  <%end%>
</tr>

<%end%>
</table>
</body>
